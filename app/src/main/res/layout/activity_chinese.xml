<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nooo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chinese">

    <Button
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/custom_button"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/noodles"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/noodleval"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="75dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/noodles_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <Button
                    android:id="@+id/noodles_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/noodles" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="1.1in"
                    android:text="Noodles"
                    android:textColor="@color/blue"
                    android:textSize="23sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/soup"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/soupval"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="75dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tomatosoup_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <Button
                    android:id="@+id/tomatosoup_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/tomatosoup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="1.1in"
                    android:text="Tomato soup"
                    android:textColor="@color/blue"
                    android:textSize="23sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/momos"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/momoval"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="75dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/momos_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <Button
                    android:id="@+id/momos_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/momos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="1.1in"
                    android:text="momos"
                    android:textColor="@color/blue"
                    android:textSize="23sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vegfriedrice"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/vegfriedval"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="75dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/vegfriedrice_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <Button
                    android:id="@+id/vegfriedrice_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/vegfriedrice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="1.1in"
                    android:text="Veg Fried Rice"
                    android:textColor="@color/blue"
                    android:textSize="23sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/schezwan"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/schezwanval"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="75dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/schezwan_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <Button
                    android:id="@+id/schezwan_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/schezwanrice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="1.1in"
                    android:text="Schezwan Fried Rice"
                    android:textColor="@color/blue"
                    android:textSize="23sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sushi"
                android:layout_width="match_parent"
                android:layout_height="1in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/sushival"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="75dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#070707"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sushi_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="-"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <Button
                    android:id="@+id/sushi_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/custom_button"
                    android:text="+"
                    android:textColor="#ECE4E4"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/sushi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="1.1in"
                    android:text="Sushi"
                    android:textColor="@color/blue"
                    android:textSize="23sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/submit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/custom_button"
        android:text="Submit"
        android:textColor="#F6F3F3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>



